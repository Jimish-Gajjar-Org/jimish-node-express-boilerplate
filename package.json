{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "description": "Node and Express Js Boilerplate By Jimish Gajjar",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules src/app.js",
    "dev": "nodemon --experimental-modules src/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "Jimish Gajjar",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
